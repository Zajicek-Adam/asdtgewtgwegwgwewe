@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <a class="nav-link text-dark" asp-area="Identity" asp-page="" title="Manage">@User.Identity?.Name</a>
        <form id="susform" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
}
else
{
        <a id="signup" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</div>
